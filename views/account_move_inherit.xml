<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_form_add_calculator_btn" model="ir.ui.view">
        <field name="name">account.move.form.add.calculator.btn</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Insertamos el botÃ³n en el header (evitamos XMLIDs y usamos type="object") -->
            <xpath expr="//form/header" position="inside">
                <button
                    name="action_open_accounting_calculator"
                    type="object"
                    string="Calculadora"
                    class="btn-secondary"
                    icon="fa-calculator"
                    groups="account.group_account_invoice"/>
            </xpath>
        </field>
    </record>
</odoo>
