<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">
    <template id="calculator_template" name="Calculator Page" page="True">
      <t t-call="website.layout">
        <div class="oe_structure"/>
        <section class="calc-section">
          <div class="container calc-card">
            <h1 class="calc-title">Calculadora</h1>

            <form action="/calculator" method="post" class="calc-form">
              <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

              <div class="calc-grid">
                <div>
                  <label>Primer número</label>
                  <input type="text" name="a" t-att-value="a" class="calc-input"/>
                </div>
                <div>
                  <label>Segundo número</label>
                  <input type="text" name="b" t-att-value="b" class="calc-input"/>
                </div>
                <div>
                  <label>Operación</label>
                  <select name="op" class="calc-select">
                    <option value="add" t-att-selected="op == 'add'">Suma (+)</option>
                    <option value="sub" t-att-selected="op == 'sub'">Resta (-)</option>
                    <option value="mul" t-att-selected="op == 'mul'">Multiplicación (×)</option>
                    <option value="div" t-att-selected="op == 'div'">División (÷)</option>
                  </select>
                </div>
              </div>

              <button type="submit" class="calc-button">Calcular</button>
            </form>

            <t t-if="error">
              <div class="calc-alert error">
                <strong>Error:</strong> <t t-esc="error"/>
              </div>
            </t>
            <t t-if="result is not None and not error">
              <div class="calc-alert ok">
                Resultado: <strong t-esc="result"/>
              </div>
            </t>
          </div>
        </section>
        <div class="oe_structure"/>
      </t>
    </template>
  </data>
</odoo>
